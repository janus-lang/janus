{
    "comments": {
        "lineComment": "//",
        "blockComment": [
            "/*",
            "*/"
        ]
    },
    "brackets": [
        [
            "{",
            "}"
        ],
        [
            "[",
            "]"
        ],
        [
            "(",
            ")"
        ]
    ],
    "autoClosingPairs": [
        {
            "open": "{",
            "close": "}"
        },
        {
            "open": "[",
            "close": "]"
        },
        {
            "open": "(",
            "close": ")"
        },
        {
            "open": "\"",
            "close": "\""
        },
        {
            "open": "{.",
            "close": ".}"
        }
    ],
    "surroundingPairs": [
        [
            "{",
            "}"
        ],
        [
            "[",
            "]"
        ],
        [
            "(",
            ")"
        ],
        [
            "\"",
            "\""
        ]
    ],
    "folding": {
        "markers": {
            "start": "^\\s*//\\s*#region",
            "end": "^\\s*//\\s*#endregion"
        }
    },
    "indentationRules": {
        "increaseIndentPattern": "^.*\\b(do|else|struct|enum|match)\\b[^;]*$|\\{\\s*$",
        "decreaseIndentPattern": "^\\s*(end|else|\\})\\b.*$"
    }
}